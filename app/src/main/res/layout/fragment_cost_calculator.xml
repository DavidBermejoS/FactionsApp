<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_redone_0003_capa_19"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/energyLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0000_energia"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/limitationLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0001_limitacion"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/psLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0002_ps"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/attackLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0006_atk"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/defenseLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0005_def"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/pmLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0004_pm"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/paLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0003_pa"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/hability1Layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0009_habilidad"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/hability2Layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0009_habilidad"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/hability3Layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0009_habilidad"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/passiveLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_0001s_0010_pasiva"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="clip_horizontal|center_horizontal|fill_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/resultsButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/app_0001s_0011_moneda_copia" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>